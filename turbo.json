{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [
        "packages/wasi-shims/src/**",
        "scripts/transpile.mjs"
    ],
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**",
                "browser-dist/**",
                "*.js",
                "*.d.ts",
                "*.js.map"
            ],
            "inputs": [
                "src/**",
                "package.json",
                "tsconfig.json"
            ]
        },
        "transpile": {
            "inputs": [
                "../../target/wasm32-wasip2/release/*.wasm",
                "../../scripts/transpile.mjs"
            ],
            "outputs": [
                "wasm/**",
                "wasm-sync/**",
                "mcp-server-jspi/**",
                "mcp-server-sync/**",
                "src/wasm/**",
                "src/wasm-sync/**"
            ]
        },
        "transpile:sync": {
            "inputs": [
                "../../target/wasm32-wasip2/release/*.wasm",
                "../../scripts/transpile.mjs"
            ],
            "outputs": [
                "wasm-sync/**",
                "mcp-server-sync/**",
                "src/wasm-sync/**"
            ]
        },
        "transpile:all": {
            "dependsOn": [
                "^transpile",
                "^transpile:sync"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "test": {
            "dependsOn": [
                "build"
            ],
            "outputs": [
                "coverage/**"
            ],
            "inputs": [
                "src/**",
                "tests/**",
                "**/*.test.ts"
            ]
        },
        "test:e2e": {
            "dependsOn": [
                "build",
                "transpile:all"
            ],
            "cache": false
        },
        "lint": {
            "outputs": []
        }
    }
}