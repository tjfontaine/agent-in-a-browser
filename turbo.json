{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**",
                "*.js",
                "*.d.ts",
                "*.js.map"
            ],
            "inputs": [
                "src/**",
                "package.json",
                "tsconfig.json"
            ]
        },
        "transpile": {
            "inputs": [
                "../target/wasm32-wasip2/release/*.wasm",
                "../scripts/transpile.mjs"
            ],
            "outputs": [
                "src/wasm/**"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "test": {
            "dependsOn": [
                "build"
            ],
            "outputs": [
                "coverage/**"
            ],
            "inputs": [
                "src/**",
                "tests/**",
                "**/*.test.ts"
            ]
        },
        "test:e2e": {
            "dependsOn": [
                "build",
                "transpile"
            ],
            "cache": false
        },
        "lint": {
            "outputs": []
        }
    }
}