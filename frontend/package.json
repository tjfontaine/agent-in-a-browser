{
    "name": "web-agent-frontend",
    "version": "0.1.0",
    "type": "module",
    "scripts": {
        "lint": "eslint src",
        "lint:fix": "eslint src --fix",
        "dev": "vite",
        "build": "pnpm run transpile:all && tsc && vite build",
        "preview": "vite preview",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "test:e2e": "playwright test",
        "test:e2e:headed": "playwright test --headed",
        "test:e2e:ui": "playwright test --ui",
        "test:e2e:docker": "docker compose -f docker-compose.e2e.yml up --build --abort-on-container-exit",
        "test:all": "pnpm run test && pnpm run test:e2e",
        "transpile": "node ../scripts/transpile.mjs web-agent-tui",
        "transpile:sync": "node ../scripts/transpile.mjs web-agent-tui --sync",
        "transpile:all": "pnpm turbo run transpile transpile:sync --filter=@tjfontaine/mcp-wasm-server --filter=@tjfontaine/wasm-tsx --filter=@tjfontaine/wasm-sqlite --filter=@tjfontaine/wasm-ratatui --filter=@tjfontaine/wasm-vim --filter=@tjfontaine/web-agent-core --filter=web-agent-frontend",
        "clean:wasm": "rm -rf src/wasm/mcp-server-jspi src/wasm/mcp-server-sync src/wasm/tsx-engine src/wasm/sqlite-module src/wasm/ratatui-demo src/wasm/edtui-module src/wasm/web-agent-tui"
    },
    "dependencies": {
        "@tjfontaine/mcp-wasm-server": "workspace:*",
        "@tjfontaine/wasi-shims": "workspace:*",
        "@tjfontaine/wasm-loader": "workspace:*",
        "@tjfontaine/wasm-ratatui": "workspace:*",
        "@tjfontaine/wasm-sqlite": "workspace:*",
        "@tjfontaine/wasm-tsx": "workspace:*",
        "@tjfontaine/wasm-vim": "workspace:*",
        "@tjfontaine/web-agent-core": "workspace:*",
        "ghostty-web": "^0.4.0",
        "isomorphic-git": "^1.36.1",
        "vite-plugin-node-polyfills": "^0.24.0"
    },
    "devDependencies": {
        "@bytecodealliance/jco": "^1.15.4",
        "@bytecodealliance/preview2-shim": "0.17.5",
        "@eslint/js": "^9.39.2",
        "@playwright/test": "^1.57.0",
        "@types/node": "^25.0.3",
        "@vitest/coverage-v8": "^4.0.16",
        "eslint": "^9.39.2",
        "jsdom": "^27.3.0",
        "typescript": "^5.7.2",
        "typescript-eslint": "^8.50.0",
        "vite": "^7.3.0",
        "vitest": "^4.0.16"
    }
}