{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "jsx": "react-jsx",
        "lib": [
            "ES2022",
            "DOM",
            "DOM.Iterable",
            "WebWorker"
        ],
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@tjfontaine/mcp-wasm-server": [
                "../packages/mcp-wasm-server/src/index.ts"
            ],
            "@tjfontaine/mcp-wasm-server/*": [
                "../packages/mcp-wasm-server/*"
            ],
            "@tjfontaine/wasi-shims": [
                "../packages/wasi-shims/src/index.ts"
            ],
            "@tjfontaine/wasi-shims/*": [
                "../packages/wasi-shims/src/*"
            ],
            "@tjfontaine/wasm-vim/*": [
                "../packages/wasm-vim/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "tests/**/*",
        "playwright.config.ts"
    ]
}